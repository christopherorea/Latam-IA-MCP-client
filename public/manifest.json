{
  "manifest_version": 3,
  "name": "Latam-IA-MCP-client",
  "description": "Conector universal open source para interactuar con sistemas MCP globales y modelos de lenguaje (LLM) desde tu navegador.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-128.png",
    "32": "icons/icon-128.png",
    "48": "icons/icon-128.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-128.png",
      "32": "icons/icon-128.png",
      "48": "icons/icon-128.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
